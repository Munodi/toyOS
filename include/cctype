#ifndef _CCTYPE_
#define _CCTYPE_

namespace std
{
    int isalnum(int);
    int isalpha(int);
    int iscntrl(int);
    int isdigit(int);
    int isgraph(int);
    int islower(int);
    int isprint(int);
    int ispunct(int);
    int isspace(int);
    int isupper(int);
    int isxdigit(int);

    int tolower(int);
    int toupper(int);
}

#endif // _CCTYPE_
